<UserControl  x:Class="Wpf_SyncCompositionPE.TreeViewUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:treeViewCustom="clr-namespace:HierarchicalTreeControl.Model;assembly=HierarchicalTreeControl"
             xmlns:loadControl="clr-namespace:LoadingWindow;assembly=LoadingWindow"
             xmlns:data="clr-namespace:Wpf_SyncCompositionPE.ViewModel;assembly=Wpf_SyncCompositionPE">

    <UserControl.Resources>

        <!--Стиль для CheckBox-->
        <Style x:Key="styleCheckBoxInnerTree" TargetType="CheckBox">
            <Style.Triggers>
                <!--Если значение свойства ShortName объекта с этим стилем будет равно USA - текст станет красного цвета-->
                <DataTrigger Binding="{Binding Path=IsSelectObjToSynch}" Value="False">
                    <Setter Property="Visibility" Value='Collapsed' />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <!--xmlns:data="clr-namespace:Wpf_SyncCompositionPE.ViewModel;assembly=Wpf_SyncCompositionPE"-->
    <Grid>

        <loadControl:LoadingWindowControl HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 30 0 30" StackPanel.ZIndex="1"  />
  
        <treeViewCustom:TreeViewCustom AllowsColumnReorder="True" ItemsSource="{Binding  Tree}" >
                <!-- Создание шаблона элемента, чтобы указать ItemsSource -->
                <treeViewCustom:TreeViewCustom.ItemTemplate>
                    <!--<HierarchicalDataTemplate  DataType="{x:Type data:TreeViewModel}" 
          ItemsSource="{Binding Children}" />-->
                    <HierarchicalDataTemplate  ItemsSource="{Binding Children}" />
                </treeViewCustom:TreeViewCustom.ItemTemplate>
                <treeViewCustom:TreeViewCustom.Columns>
                    <!-- Создайте первый столбец, содержащий кнопку expand и имя типа .-->
                    <GridViewColumn Header="Наименование" Width="400">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <!--Кнопка Expander -->
                                    <treeViewCustom:TreeViewCustomExpander/>
                                    <Image Width="16" Height="16" Margin="3,0" Source="{Binding PathIcon}" />
                                    <CheckBox x:Name="ckBoxInnerTree" IsChecked="{Binding IsObjectToSync}"  Style="{StaticResource styleCheckBoxInnerTree}" VerticalAlignment="Center"/>
                                    <!--Отобразить имя-->
                                    <TextBlock Text="{Binding Name}" TextWrapping="Wrap" Width="250"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <!-- Создайте первый столбец, содержащий кнопку expand и имя типа .-->
                    <GridViewColumn Header="Номер" Width="150" >
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <!--Отобразить имя-->
                                    <TextBlock Text="{Binding Number}" Width="Auto"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </treeViewCustom:TreeViewCustom.Columns>
            </treeViewCustom:TreeViewCustom>
   </Grid>
</UserControl>
